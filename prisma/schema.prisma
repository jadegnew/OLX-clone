generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  phone         String         @unique
  password      String
  name          String
  refreshTokens RefreshToken[]
  salePosts     SalePost[]
  whitelistIP   WhitelistIP[]
}

model RefreshToken {
  id           Int    @id @default(autoincrement())
  userId       Int
  refreshToken String
  User         User   @relation(fields: [userId], references: [id])
}

model WhitelistIP {
  id     Int    @id @default(autoincrement())
  userId Int
  ip     String
  User   User   @relation(fields: [userId], references: [id])
}

model SalePost {
  id          Int     @id @default(autoincrement())
  userId      Int
  title       String  @db.VarChar(100)
  description String
  location    String  @db.VarChar(100)
  phone       String
  price       Int
  viewsCount  Int     @default(0)
  imageUrl    String?
  User        User    @relation(fields: [userId], references: [id])
}
